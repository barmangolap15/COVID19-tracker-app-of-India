<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/state_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardElevation="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:id="@+id/counter"
            android:text="1"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/state_nameTv"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/counter"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/colorAccent"
            android:text="Title"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge"
            android:layout_toLeftOf="@+id/click_hand"
            android:layout_marginRight="10dp"
            android:text="10"
            android:id="@+id/confirm_cases"
            android:fontFamily="@font/poppins"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/enter"
            android:id="@+id/click_hand"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D1CFCF"
        android:layout_gravity="bottom"
        />
</androidx.cardview.widget.CardView>