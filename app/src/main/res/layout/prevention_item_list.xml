<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/state_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_prevention"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_hand_wash"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/back"/>

        <TextView
            android:id="@+id/preventionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overview1"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            android:includeFontPadding="false"
            android:layout_toEndOf="@+id/image_prevention"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D1CFCF"
        android:layout_gravity="bottom"
        />
</androidx.cardview.widget.CardView>